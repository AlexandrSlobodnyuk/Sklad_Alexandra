import math
def factorial(n):
    r = 1
    for i in range(1, n+1):
        r = r * i
    return r

def e_v_stepeni_x(x):
    a = 0
    for s in range(0, 30):
        a = a + (x**s)/(factorial(s))
    return a
print(e_v_stepeni_x(x))   #ĞŸÑ€Ğ¾Ğ²ĞµÑ€Ğ¸Ğ» Ğ½Ğ° ĞµĞ´Ğ¸Ğ½Ğ¸Ñ†Ğµ Ğ¸ Ğ´Ğ²Ğ¾Ğ¹ĞºĞµ, Ğ²ÑĞµ Ñ€Ğ°Ğ±Ğ¾Ñ‚Ğ°ĞµÑ‚ğŸ‘ğŸ»ğŸ‘ğŸ»
         
